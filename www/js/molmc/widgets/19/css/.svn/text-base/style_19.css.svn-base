.slider{margin-top:10px;width:100%;height:15px;}
.slider-bar{display:block; width:25%; background-color:darkred; position:relative;cursor: pointer;top: -7px;height:28px;width:28px;border-radius: 1em;Z-index:10;background-color:white;-moz-box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;-webkit-box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;}
.slider-bar:hover{-moz-box-shadow: inset 0 0 3px #387bbe,0px 0 9px #387bbe;-webkit-box-shadow: inset 0 0 3px #387bbe,0px 0 9px #387bbe;box-shadow: inset 0 0 3px #387bbe,0px 0 9px #387bbe;}
.slider-num-right{width:55px;float:right;padding-right: 0px;}
.slider-num-left{width:55px;float:left;padding-right: 0px;}
.progress-bar{border-radius: 1em;background-color:#61b0e9;}
.progress{background-color:#bbb;overflow:visible;margin-bottom:0px;border-radius: 1em;}
