#widget19 h4{
    margin: 10px 5px;
}

#widget19 li input { 
    width:80%;
    height: 14px; 
    background: rgba(60, 114, 230, .8); 
    border: 1px solid #333; 
    -webkit-border-radius: 1em; 
    -webkit-appearance: none !important; 
    background-clip: padding-box;
} 

#widget19 li input::-webkit-slider-thumb{ 
    width: 18px; 
    height: 28px; 
    background: -webkit-gradient( 
        linear, 
        left top, 
        left bottom, 
        from(#fff), 
        to(#ccc) 
    );
    border: 1px solid #000; 
    -webkit-box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;
    -webkit-border-radius: 4px; 
    -webkit-appearance: none !important; 
}

#widget19 li {
    margin: 5px;
    padding: 5px;
    list-style:none;
}
#widget19 .btn {
    padding: 6px 0px;
    border-radius: 6px;
    background-clip: padding-box;
}
#widget19 li.active {
    padding: 4px;
    border: 1px solid #ddd;
    outline-color: rgb(255, 255, 255);
}

#widget19 li button:focus {
    outline-color: rgb(255, 255, 255);
}
#widget19 li button{
    width: 90px;
    text-align: center;
}
#widget19 li button.active{
    background: rgba(60, 114, 230, .8);
}

#widget19 span{
    text-align:center;
}
/*滑动开关*/
#widget19 .button-grouped.flex {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}
#widget19 .button-grouped {
    display: inline-block;
    margin: 5px;
}

#widget19 .button-grouped.flex > .button {
    -webkit-box-flex: 1;
    -moz-box-flex: 1 auto;
    -webkit-flex: 1 auto;
    -ms-flex: 1 auto;
    flex: 1 auto;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
#widget19 .button-grouped > .button:first-child {
    border-left: 1px solid #666;
    border-top-left-radius: 6px;
    border-bottom-left-radius: 6px;
}
#widget19 .button-grouped * {
    border-radius: 0px;
    float: left;
    border-left: 0px solid transparent;
    border-right: 1px solid #666;
    border-bottom: 1px solid #666;
    border-top: 1px solid #666;
    margin: 0;
}
#widget19 .button {
    position: relative;
    display: inline-block;
    padding: 8px 12px;
    margin: 8px 0;
    font-weight: bold;
    color: #000;
    text-align: center;
    vertical-align: top;
    cursor: pointer;
    background-color: #eee;
    border: 1px solid #666;
/*    border-radius: 6px;*/
    /* box-shadow: 0 1px 0 #fff; */
    text-decoration: none;
    z-index: 2;
}

#widget19 .button.pressed {
/*    background: #fff;*/
    background: rgba(60, 114, 230, .8);
    background-clip: padding-box;
}

#widget19 #lightbar-bright label {
    float: right;
    width: 50px;
    text-align: center;
    margin-right: 10px;
}
#widget19 #lightbar-bright input {
    width: 75%;
    margin-left: 10px;
    background-clip: padding-box;
}