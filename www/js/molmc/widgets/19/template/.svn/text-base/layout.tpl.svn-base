<div id="widget19" style="padding:10px">
    <div style="font-size:1.5em;height:35px;text-align:center;">
        <span id="ventilator" style="display:none;color: green;"><i class="fa fa-refresh"></i></span>
        <span id="heater" style="display:none;color: red;"><i class="fa fa-fire"></i></span>
        <span id="rollover" style="display:none;"><i class="fa fa-arrows-v"></i></span>
    </div>
    <div id="egg" style="margin:0px auto;"></div>
    <div class="col-xs-12 col-md-12" style="text-align:center">
    <div class="col-xs-6 col-md-6" style="font-size: 1.5em;color: rgb(203, 8, 203);"><img src="img/temperature.png" id="img_temperature"></i><span id="temperature" style="margin-left:10px"> </span></div>
    <div class="col-xs-6 col-md-6" style="font-size: 1.5em;color: rgb(86, 146, 255);"><i class="fa fa-tint" style="margin-top:20px;"></i><span id="humidity" style="margin-left:10px"> </span></div>
    </div>

    <h3><%- _lang('widget_brightness') %>：</h3>
    <div id="lightbar-bright">
<!--
        <li>
            <label id="bright_txt" for="lightbar-bright">0</label>
            <input type='range' id="lightbar-bright" name="lightbar-bright" min='0' max='100' step='1' value='0'>
        </li>
-->
    </div>
    <h3> <%- _lang('widget_color') %>：</h4>
    <div class="row">
        <li>
            <input type='range' id="lightbar-color" min='0' max='100' step='1' value='0'style="background: #fff;">
            <label id="color_txt" for="lightbar-bright" style="float:right; width:50px; margin-top: -6px;background: #fff"></label>
        </li>
    </div>   

    <div style="width:250px;line-height:36px;margin:0px auto;clear:both;">
        <h3 style="float:left; line-height:45px; width: 90px"><%- _lang('widget_ventilator') %>:</h3>
<!--滑动开关-->
        <div id="ventilatorSW" class="button-grouped flex tabbed" style="width:100px; height:40px; font-size:1.1em">
            <a class="button pressed" data-ignore-pressed="true" value="0" style="margin:0;line-height:26px;"><%- _lang('g_off') %></a>
            <a class="button" data-ignore-pressed="true" value="1" style="margin:0;line-height:26px;"><%- _lang('g_on') %></a>
        </div>
    </div>

    <div style="width:250px;line-height:36px;margin:0px auto;clear:both;">
        <h3 style="float:left;line-height:50px; width: 90px;"><%- _lang('widget_heater') %>:</h3>
<!--滑动开关-->
        <div id="heaterSW" class="button-grouped flex tabbed" style="width:100px; height:40px; font-size:1.1em">
            <a class="button pressed" data-ignore-pressed="true" value="0" style="margin:0;line-height:26px;"><%- _lang('g_off') %></a>
            <a class="button" data-ignore-pressed="true" value="1" style="margin:0;line-height:26px;"><%- _lang('g_on') %></a>
        </div>
    </div>
    <button class="btn btn-primary btn-block" data-id="rollover" style="width:100px;height:40px;margin:0px auto; margin-top: 10px;clear:both; background-color: #38c; border: 0; font-size: 18px; display: block;"><%- _lang('widget_rollover') %></button>
</div>