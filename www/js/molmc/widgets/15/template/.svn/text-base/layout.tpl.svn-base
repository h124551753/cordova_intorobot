<div id="widget15" style="padding:10px;">
    <div class="arm_status"></div>
    <h3 class="depict"><%- _lang('widget_chassis') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_left') %></div>
        <input type="range" class="slider" id="arm-base" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_right') %></div>
        <label>0</label>
    </div>
    <h3 class="depict"><%- _lang('widget_shoulder') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_down') %></div>
        <input type="range" class="slider" id="arm-shoulder" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_up') %></div>
        <label>0</label>
    </div>
    <h3 class="depict"><%- _lang('widget_elbow') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_down') %></div>
        <input type="range" class="slider" id="arm-elbow" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_up') %></div>
        <label>0</label>
    </div>
    <h3 class="depict"><%- _lang('widget_wrist') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_down') %></div>
        <input type="range" class="slider" id="arm-wrist" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_up') %></div>
        <label>0</label>
    </div>
    <h3 class="depict"><%- _lang('widget_turnwrist') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_left') %></div>
        <input type="range" class="slider" id="arm-wrist_rotate" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_right') %></div>
        <label>0</label>
    </div>
    <h3 class="depict"><%- _lang('widget_hand') %>：</h3>
    <div class="rowSlider">
        <div class="depict"><%- _lang('widget_loosen') %></div>
        <input type="range" class="slider" id="arm-gripper" min="-90" max="90" value="0">
        <div class="depict"><%- _lang('widget_hold') %></div>
        <label>0</label>
    </div>
    <div style="text-align:center; margin-top:20px;clear: both" >
        <button><%- _lang('widget_reset') %></button>
    </div>
</div>
