.molmcSlider-input{
    background: rgba(60, 114, 230, .8);
    height: 14px;
    border: 1px solid #333;
    -webkit-border-radius: 1em;
    -webkit-appearance: none !important;
    margin: 10px 0px;
}

.molmcSlider-input::-webkit-slider-thumb{ 
    width: 18px; 
    height: 28px; 
    background: -webkit-gradient( 
        linear, 
        left top, 
        left bottom, 
        from(#fff), 
        to(#ccc) 
    );
    border: 1px solid #000; 
    -webkit-box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;
    -webkit-border-radius: 4px; 
    -webkit-appearance: none !important; 
    margin: 3px 0px;
}

.molmcSlider{
    height: 34px;
    margin: 5px 0px;
}
.molmcSlider .molmcSlider-input{
    width: 80%;
    height: 14px;
    background: rgba(60, 114, 230, .8);
    border: 1px solid #333;
    -webkit-border-radius: 1em;
    -webkit-appearance: none !important;
    margin: 10px 0px;
}

.molmcSlider .molmcSlider-input::-webkit-slider-thumb{ 
    width: 18px; 
    height: 28px; 
    background: -webkit-gradient( 
        linear, 
        left top, 
        left bottom, 
        from(#fff), 
        to(#ccc) 
    );
    border: 1px solid #000; 
    -webkit-box-shadow: inset 0 0 1px #bbb,0px 0 4px #bbb;
    -webkit-border-radius: 4px; 
    -webkit-appearance: none !important; 
    margin: 3px 0px;
}

.molmcSlider .molmcSlider-label{
    display: block;
    float: right;
    width: 15%;
    margin: -5px auto;
    padding: 5px;
    text-align: center;
}